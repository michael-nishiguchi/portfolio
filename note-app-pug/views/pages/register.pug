doctype html
html
  include ../partials/head.pug
  body.loginBody
    .wrapper.fadeInDown
      #formContent
        // Tabs Titles
        // Icon
        .fadeIn.first
        // Login Form
        form(action="/register" method="post")
          h2.error=alert
          br
          h1.fadeIn.first Create an Account
          input#email.fadeIn.second(type="text" name="email" placeholder="email" autofocus="autofocus" required="")
          input#password.fadeIn.third(type="password" name="password" placeholder="password" required="")
          input#passwordCopy.fadeIn.fourth(type="password" name="passwordCopy" placeholder="repeat password" required="")
          button.btn.fadeIn.fifth.registerBtn.blueBtn(type="submit") Register
          input.registerBtn.fadeIn.fifth(type="button" onclick="viewLogin()" value="login")
script.
  function viewLogin() {
    window.location.href = '/viewLogin'
  }

