doctype html
html
  include ../partials/head.pug
  body.loginBody
    .wrapper.fadeInDown
      #formContent
        // Login Form
        form(action="/login" method="post")
          h2.error=alert
          br
          h1.fadeIn.first Login
          input#email.fadeIn.second(type="text" name="email" placeholder="email" autofocus="autofocus" required="")
          input#password.fadeIn.third(type="password" name="password" placeholder="password" required="")
          input.fadeIn.fourth(type="submit" value="Log In")
          br
          input.registerBtn.fadeIn.fifth(type="button" onclick="viewRegister()" value="register")
script.
  function viewRegister() {
    window.location.href = '/viewRegister'
  }
