doctype html
html(lang='en')
  include ../partials/head.pug
  body
    include ../partials/myNav.pug
    .container
      if (success == true) 
        h4(class="alert") *Note updated
      h1 Welcome to notes
      each note in notes
        form(action="/edit" class="notes" method="post")
          input(type="hidden" name="note_id" value=note.note_id)
          input(class="form-control form-control-lg input-lg" name="title" class="noteTitle" type="text" value=note.title)
          .small(class="font-italic") Last modified #{note.date_created}
          textarea(class="form-control" type="text" name="content" rows="5" value=note.content)= note.content

          button.btn.blueBtn.noteBtn(type="submit") Save
          button.btn.btn-danger.noteBtn(type="submit" formaction="deletenote") Delete
          
          // Button trigger modal
          //button.btn.btn-danger.noteBtn(type='button' data-toggle='modal' data-target='#exampleModal')
            | Delete
          // Modal
          //#exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Delete
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  | Are you sure you want to delete this note?
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                  //button.btn.btn-danger(type='button' onclick="deleteNote()") Delete Note
                  button.btn.btn-danger(type="submit" formaction="/deleteNote") Delete Note



