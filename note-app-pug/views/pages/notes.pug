doctype html
html(lang='en')
  include ../partials/head.pug
  body
    include ../partials/myNav.pug
    .container.all-notes
      each note in notes
          form(action="/edit" method="post" class="note-item")
            .note-content
              input(type="hidden" name="note_id" value=note.note_id)
              input(name="title" class="note-item-title" value=note.title readonly)
              i=note.date_created
              textarea(class=" note-item-content" type="text" name="content" rows="5" value=note.content readonly)= note.content
            input.btn(type="submit" formaction="/editView" value="Edit")
            input.btn.btn-danger(type="submit" formaction="/deletenote" value="Delete")

          // Button trigger modal
          //button.btn.btn-danger.noteBtn(type='button' data-toggle='modal' data-target='#exampleModal')
            | Delete
          // Modal
          //#exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Delete
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  | Are you sure you want to delete this note?
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                  //button.btn.btn-danger(type='button' onclick="deleteNote()") Delete Note
                  button.btn.btn-danger(type="submit" formaction="/deleteNote") Delete Note



